    <uses-permission  android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.EGrocer">
        <activity android:name=".FChangePwd"></activity>
        <activity android:name=".OrderDetails" />
        <activity android:name=".AcceptedOrder" />
        <activity android:name=".AvailableOrder" />
        <activity android:name=".ShopDetails" />
        <activity android:name=".OTPVerification" />
        <activity android:name=".Registration" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".Changepassword" />
        <activity android:name=".EditProfile" />
        <activity android:name=".UserProfile" />
        <activity android:name=".Homepage" />
        <activity android:name=".Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>